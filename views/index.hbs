            <button class="btn btn-outline-primary">Start learning</button>
          </div>
        </div>
      </div>
    </section>

    {{!-- services section --}}
    <section id="services_section" class="py-4">


      <div class="container">
        <h1 class="text-center text-secondary"> Services that we provide </h1>

        <div class="row mt-5">
        {{!-- first service colomn --}}
        {{#each services}}

        <div class="col-md-4">

          <div class="card">
            <div class="card-body">

             <div class="container text-center py-3">
               <i class="{{this.icon}} service_icon"></i>
             </div>

              <h5 class ="card-title">{{this.title}}</h5>
              <p>{{this.description}}</p>

              <a href="{{this.link}}">{{this.linkText}}</a>
              <a href="#!" class="ml-3">Support</a>
  
            </div>
          </div>

        </div>
        {{/each}}


      </div>

       </div>
      
    </section>

    {{!-- banner 2 section --}}

    <section class="banner2_section background1 py-5">
      <div class="container text-center">
        <div class="row">
          <div class="col-md-6 text-center py-5">
            {{!-- left side --}}
            <h3>
              We work for business.
            </h3>

            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Labore, fugit.

            </p>
            <button class="btn btn-primary">Click here</button>

          </div>

          <div class="col-md-6 text-center py-2">
            {{!-- right side --}}
            <img src="/static/images/banner3.jpg" alt="" style="height: 250px;">
            
          </div>

        </div>
      </div>
    </section>

    {{!-- banner3 section --}}

    <section class="banner2_section background1 py-5">
      <div class="container text-center">
